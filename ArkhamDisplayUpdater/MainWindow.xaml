<Window x:Class="ArkhamDisplayUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkhamDisplayUpdater"
        mc:Ignorable="d"
        Title="Updater" Height="200" Width="400">
	<Grid>
		<TextBlock Name="UpdaterText" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Updating..." TextWrapping="Wrap"/>
		<!--<ProgressBar Name="ProgressBar" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,164,0,0" Width="300" Height="10"/>-->
		<Button Name="UpdateButton" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,107,0,0" Width="45" Click="OnUpdateClicked" Visibility="Hidden"/>
		<Button Name="CloseButton" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,107,0,0" Width="45" Click="OnCloseClicked" Visibility="Hidden"/>
	</Grid>
</Window>