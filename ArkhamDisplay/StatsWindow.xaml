<Window x:Class="ArkhamDisplay.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkhamDisplay"
        mc:Ignorable="d"
        Title="Route Tracker Stats" Height="400" Width="750">
	<Grid>
		<TextBlock Name="PercentageLabel" Text="0.0%" HorizontalAlignment="Right" Margin="10,10,10,0" VerticalAlignment="Top" Height="120" Width="Auto" MaxWidth="800" FontSize="100"/>
		<TextBlock Name="RiddleLabel" Text="" HorizontalAlignment="Right" Margin="36,0,10,0" VerticalAlignment="Center" Height="120" Width="Auto" MaxWidth="800" FontSize="100"/>
		<TextBlock Name="ExtraLabel" Text="" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="120" Width="Auto" MaxWidth="800" FontSize="100"/>
	</Grid>
</Window>
