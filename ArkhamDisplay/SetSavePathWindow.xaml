<Window x:Class="ArkhamDisplay.SetSavePathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArkhamDisplay"
        mc:Ignorable="d"
        Title="Set Save File Path" Height="150" Width="500">
	<Grid>
		<TextBox HorizontalAlignment="Left" Margin="111,10,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="320"  Height="35" Name="SavePathBox"/>
		<TextBlock HorizontalAlignment="Left" Margin="7,13,0,0" Text="Save File (Full Path)" TextWrapping="Wrap" VerticalAlignment="Top"/>
		<Button Name="FileButton" Content="..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="436,18,0,0" Width="25" Height="20" Click="FileButton_Click"/>
		<Button Name="OKButton" Content="OK" HorizontalAlignment="Left" Margin="261,0,0,25" VerticalAlignment="Bottom" Width="75" Click="OKButton_Click"/>
		<Button Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="355,0,0,25" VerticalAlignment="Bottom" Width="75" Click="CancelButton_Click"/>
	</Grid>
</Window>
